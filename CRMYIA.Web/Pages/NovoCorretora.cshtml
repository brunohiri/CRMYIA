@page
@model CRMYIA.Web.Pages.NovoCorretoraModel
@{
    ViewData["Title"] = "Nova";
    ViewData["Pagina"] = "Corretora";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form  method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @if ((Model != null) && (Model.Mensagem != null))
                        {
                            <div class="@Model.Mensagem.CssClass alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="@Model.Mensagem.IconClass"></i>
                                @Model.Mensagem.Mensagem
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdCorretora">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>CNPJ</label>
                        <input type="text" class="form-control cnpj" placeholder="CNPJ" required asp-for="@Model.Entity.CNPJ">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Razão Social</label>
                        <input type="text" class="form-control" placeholder="Razão Social" required asp-for="@Model.Entity.RazaoSocial">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Nome Fantasia</label>
                        <input type="text" class="form-control" placeholder="Nome Fantasia" asp-for="@Model.Entity.NomeFantasia">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>CEP</label>
                        <input type="text" class="form-control cep" placeholder="CEP" required asp-for="@Model.Entity.CEP">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Endereço</label>
                        <input type="text" class="form-control endereco" placeholder="Endereço" required asp-for="@Model.Entity.Endereco">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Número</label>
                        <input type="text" class="form-control numero" placeholder="Número" required asp-for="@Model.Entity.Numero">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Complemento</label>
                        <input type="text" class="form-control complemento" placeholder="Complemento" asp-for="@Model.Entity.Complemento">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Bairro</label>
                        <input type="text" class="form-control bairro" placeholder="Bairro" required asp-for="@Model.Entity.Bairro">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>Cidade</label>
                        <select class="form-control select2 cidade" style="width: 100%;" asp-for="@Model.Entity.IdCidade">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListCidade)
                            {
                                <option value="@Item.IdCidade" data-id="@Item.CodigoIBGE">@Item.Descricao</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>UF</label>
                        <select class="form-control select2 uf" style="width: 100%;">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListEstado)
                            {
                                <option value="@Item.IdEstado" data-id="@Item.Sigla">@Item.Sigla</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Data de Cadastro</label>
                        <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label>Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="customSwitch3">Ativo</label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="reset" class="btn btn-default" onclick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>
</div>