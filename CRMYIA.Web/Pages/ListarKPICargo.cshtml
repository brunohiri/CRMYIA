@page
@model CRMYIA.Web.Pages.ListarKPICargoModel
@{
    ViewData["Title"] = "Listar";
    ViewData["Pagina"] = "KPICargo";
}
@using CRMYIA.Business.Util;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="tableListagem" class="table table-bordered table-striped datatable">
                    <thead>
                        <tr>
                            <th>Cargo</th>
                            <th>Descrição</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                        {
                            foreach (var Item in Model.ListEntity)
                            {
                        <tr>
                            <td>@Item.Cargo</td>
                            <td>@Item.Descricao</td>
                            <td>@(Item.Ativo ? "Ativo" : "Inativo")</td>
                            <td>
                                <a asp-page="/NovoKPICargo" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdKPICargo.ToString()))" title="Editar" class="text-info"><i class="icon fas fa-edit"></i></a>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
