@page
@model CRMYIA.Web.Pages.ListarPerfilModel
@{
    ViewData["Title"] = "Listar";
    ViewData["Pagina"] = "Perfil";
}
@using CRMYIA.Business.Util;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="tableListagem" class="table table-bordered table-striped datatable">
                    <thead>
                        <tr>
                            <th>Perfil</th>
                            <th>Qtd</th>
                            <th>Cadastro</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                        {
                            foreach (var Item in Model.ListEntity)
                            {
                                <tr>
                                    <td>@Item.Descricao</td>
                                    <td>@(Item.UsuarioPerfil == null ? 0 : Item.UsuarioPerfil.Count())</td>
                                    <td>@Item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>@(Item.Ativo ? "Ativo" : "Inativo")</td>
                                    <td>
                                        <a asp-page="/NovoPerfil" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdPerfil.ToString()))" title="Editar" class="text-info"><i class="icon fas fa-edit"></i></a>
                                        <a asp-page="/ListarUsuario" title="Vincular Usuários" class="text-info"><i class="icon fas fa-link"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
