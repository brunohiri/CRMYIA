@page
@model CRMYIA.Web.Pages.ListarAniversarianteModel
@{
    ViewData["Title"] = "Listar";
    ViewData["Pagina"] = "Aniversariantes do Mês";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                    <table id="tableListagem" class="table table-striped table-hover dt-responsive display nowrap datatable" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th width="40%">Nome</th>
                            <th width="20%">Perfil</th>
                            <th width="20%">Telefone</th>
                            <th width="20%">Data de Aniversario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                        {
                            foreach (var Item in Model.ListEntity)
                            {
                            <tr>
                                <td></td>
                                <td>@Item.Nome</td>
                                <td class="text-center">@Item.UsuarioPerfil</td>
                                <td class="text-center">@Html.Raw(string.IsNullOrEmpty(Item.Telefone) ? "<span class=\"badge badge-pill badge-warning\">NÃO INFORMADO</span>" : Item.Telefone)</td>
                                <td class="text-center">@Item.DataNascimentoAbertura?.ToString("dd/MM")</td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
