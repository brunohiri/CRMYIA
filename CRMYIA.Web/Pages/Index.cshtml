            <!-- /.col -->

            <div class="col-md-12">
                <!-- USERS LIST -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Campanhas e Marketing</h3>

                        <div class="card-tools">
                            @*<span class="badge badge-danger">8 novas campanhas</span>*@
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <ul class="users-list clearfix">

                            @foreach (var Item in Model.ListaCampanhaArquivo)
                            {

                                if (Item.CampanhaArquivo.Count > 0)
                                {
                                    url = "/Banners";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.Video.Count > 0)
                                {
                                    url = "/Videos";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.CapaRedeSocial.Count > 0)
                                {
                                    url = "/CapasRedeSocial";

                                    var RedeSocial = Item.CapaRedeSocial.ToList();

                                    int tam = RedeSocial.Count();
                                    int i = 0;

                                    foreach (var ItemRedeSocial in RedeSocial)
                                    {


                                        if (IdCampanha != ItemRedeSocial.IdCampanha)
                                        {
                                            IdCampanha = ItemRedeSocial.IdCampanha;
                                            if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                            {
                                                nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                            }
                                            else
                                            {
                                                nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                            }

                                            <li class="banners" style="width:6.5rem !important;">
                                                <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                                    <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                                </a>
                                                <span class="users-list-date">@Item.Descricao</span>
                                            </li>
                                        }

                                    }
                                }
                                else if (Item.AssinaturaCartao.Count > 0)
                                {
                                    url = "/AssinaturaCartao";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.Banner.Count > 0)
                                {
                                    url = "/OperadoraSeguradora";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }


                            }


                        </ul>
                        <!-- /.users-list -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer text-center banners">
                        <a href="/MaterialDivulgacao">Ver todas as Campanhas</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!--/.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
