                                            @Model.Mensagem.Mensagem
                                        </div>
                                    }
                                </div>
                            </div>*@

                            <input type="hidden" class="form-control" asp-for="@Model.Entity.IdCampanha" id="IdCampanha">
                            @if (Model.Entity.IdCampanhaReferencia != null)
                            {
                                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdCampanhaReferencia" id="IdCampanhaReferencia" name="IdCampanhaReferencia">
                            }
                        </div>

                        <div class="row">

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="Descricao">Descrição</label>
                                    <input type="text" class="form-control" placeholder="Descrição" id="Descricao" required asp-for="@Model.Entity.Descricao">
                                    <div class="invalid-feedback">
                                       * O Campo Descrição é Obrigatório.
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>&emsp;</label>
                                    <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                        <input type="checkbox" class="custom-control-input" id="eSubCategoria" name="eSubCategoria">
                                        <label class="custom-control-label" for="eSubCategoria">É uma Sub-Categoria?</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row d-none categoria">

                            @*<div class="col-sm-6">
                                <div class="form-group">
