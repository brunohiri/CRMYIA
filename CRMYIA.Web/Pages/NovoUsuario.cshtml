@page
@model CRMYIA.Web.Pages.NovoUsuarioModel
@{
    ViewData["Title"] = "Novo Usuário";
    ViewData["Pagina"] = "Usuário";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @if ((Model != null) && (Model.Mensagem != null))
                        {
                            <div class="@Model.Mensagem.CssClass alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="@Model.Mensagem.IconClass"></i>
                                @Model.Mensagem.Mensagem
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdUsuario">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" class="form-control cpf" placeholder="CPF" required asp-for="@Model.Entity.CPF">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" placeholder="Nome" required asp-for="@Model.Entity.Nome">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Perfil</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.UsuarioIdPerfil" id="UsuarioIdPerfil">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListPerfil)
                            {
                                <option value="@Item.IdPerfil">@(Item.Descricao)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Vincular</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.IdUsuarioHierarquia" id="IdUsuarioHierarquia">
                            <option selected="selected">Selecione...</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Data de Nascimento</label>
                        <input type="date" class="form-control" placeholder="Data de Nascimento" asp-for="@Model.Entity.DataNascimento">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="text" class="form-control telefone" placeholder="Telefone" required asp-for="@Model.Entity.Telefone">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="Email" required asp-for="@Model.Entity.Email">
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label>Logar com </label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="LogarComEmail" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="LogarComEmail">Email</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Login</label>
                        <input type="email" class="form-control" placeholder="Login" required asp-for="@Model.Entity.Login">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Senha</label>
                        <input type="password" class="form-control" placeholder="Senha" asp-for="@Model.Entity.Senha">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Confirmar Senha</label>
                        <input type="password" class="form-control" placeholder="Confirmar Senha" asp-for="@Model.ConfirmarSenha">
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Data de Cadastro</label>
                        <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label>Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="Ativo" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="Ativo">Ativo</label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="reset" class="btn btn-default" onclick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>
</div>
