@page
@model CRMYIA.Web.Pages.NovoOperadoraModel
@{
    ViewData["Title"] = "Nova";
    ViewData["Pagina"] = "Operadora/Seguradora";
}
@{var checkedd = ""; }
@{ int i = 0;}
@{ int j = 0;}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @if ((Model != null) && (Model.Mensagem != null))
                        {
                            <div class="@Model.Mensagem.CssClass alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="@Model.Mensagem.IconClass"></i>
                                @Model.Mensagem.Mensagem
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdOperadora">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.NomeArquivo">
                <div class="col-sm-4">
                    <label>Modalidade</label>
                    <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdModalidade" id="OperadoraIdModalidade">
                        <option selected="selected" value="0">Selecione...</option>
                        @foreach (var Item in Model.ListModalidade)
                        {
                            <option value="@Item.IdModalidade">@(Item.Descricao)</option>
                        }
                    </select>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Descrição</label>
                        <input type="text" class="form-control" placeholder="Descrição" required asp-for="@Model.Entity.Descricao">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Data de Cadastro</label>
                        <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="customSwitch3">Ativo</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">

                @if (Model.ListGrupoCorretorOperadora == null || Model.ListGrupoCorretorOperadora.Count == 0)
                {
                    <div class="col-sm-4">
                        <label>Grupo de Corretores</label>
                        <div class="form-check">
                            @foreach (var Item in Model.ListGrupoCorretor)
                            {

                                <input class="form-check-input" type="checkbox" name="IdGrupoCorretor" value="@Item.IdGrupoCorretor">
                                <label class="form-check-label" for="IdGrupoCorretor">@(Item.Descricao)</label><br>
                            }



                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-4">
                        <label>Grupo de Corretores</label>
                        <div class="form-check">
                            @while (i < Model.ListGrupoCorretor.Count())
                            {
                                if (Model.ListGrupoCorretor[i].IdGrupoCorretor == Model.ListGrupoCorretorOperadora[j].IdGrupoCorretor && Model.ListGrupoCorretorOperadora.Count() >= 1)
                                {
                                    <input class="form-check-input" type="checkbox" name="IdGrupoCorretor" value="@Model.ListGrupoCorretor[i].IdGrupoCorretor" checked>
                                    <label class="form-check-label" for="IdGrupoCorretor">@(Model.ListGrupoCorretor[i].Descricao)</label><br>
                                    if (!(Model.ListGrupoCorretorOperadora.Count() == 1))
                                        j++;
                                }
                                else
                                {
                                    <input class="form-check-input" type="checkbox" name="IdGrupoCorretor" value="@Model.ListGrupoCorretor[i].IdGrupoCorretor">
                                    <label class="form-check-label" for="IdGrupoCorretor">@(Model.ListGrupoCorretor[i].Descricao)</label><br>
                                }
                                i++;
                            }
                        </div>
                    </div>
                }

                <div class="col-sm-8">
                    <div class="form-group">
                        <label for="NomeArquivoBanner">Selecione uma Logo Marca:</label>
                        <div class="input-group">
                            <input type="file" id="NomeArquivoBanner" name="NomeArquivoBanner">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="reset" class="btn btn-default" onclick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>
</div>