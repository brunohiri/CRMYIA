@page
@model CRMYIA.Web.Pages.NovaCampanhaArquivo
@{
    ViewData["Title"] = "Upload";
    ViewData["Pagina"] = "Campanha";
}
@using CRMYIA.Business.Util; 
@{ var caminhoImagem = ""; }
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <form role="form" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @if ((Model != null) && (Model.Mensagem != null))
                                {
                                    <div class="@Model.Mensagem.CssClass alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                        <i class="@Model.Mensagem.IconClass"></i>
                                        @Model.Mensagem.Mensagem
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">

                        <div class="row m-2">
                            <div class="col-sm-6">
                                <img src="~/img/fotoCadastro/foto-cadastro.jpeg" id="imagem" width="170px" height="130px" alt="Responsive image">
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <input type="hidden" class="form-control" asp-for="@Model.Entity.IdCampanhaArquivo" id="IdCampanhaArquivo">
                        <input type="hidden" class="form-control" asp-for="@Model.CaminhoImagem" id="CaminhoImagem">

                        @if (@Model.Entity.IdCampanhaArquivo! > 0)
                        {
                            <input type="hidden" class="form-control" asp-for="@Model.ImagemDiferente" id="ImagemDiferente">
                        }

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="NomeArquivoCampanha">Selecione um arquivo:</label>
                                <div class="input-group">
                                    <input type="file" id="NomeArquivoCampanha" asp-for="@Model.NomeArquivoCampanha" name="NomeArquivoCampanha" accept=".png">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Campanha</label>
                                <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdCampanha" id="IdCampanha">
                                    <option selected="selected">Selecione...</option>
                                    @foreach (var Item in Model.ListCampanha)
                                    {
                                        <option value="@Item.IdCampanha">@(Item.Descricao)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Data de Cadastro</label>
                                <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                            </div>
                        </div>

                        <div class="col-sm-1">
                            <div class="form-group">
                                <label>Status</label>
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.Entity.Ativo">
                                    <label class="custom-control-label" for="customSwitch3">Ativo</label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Descrição</label>
                                <textarea rows="3" class="form-control" placeholder="Descrição" asp-for="@Model.Entity.Descricao"></textarea>
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Observações</label>
                                <textarea rows="3" class="form-control" placeholder="Observações" asp-for="@Model.Entity.Observacao"></textarea>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
            <div class="card-body">
                <table id="tableListagem" class="table table-bordered table-striped datatable">
                    <thead>
                        <tr>
                            <th width="25%">Imagem</th>
                            <th width="25%">Descrição</th>
                            <th width="20%">Nome do Arquivo</th>
                            <th width="15%">Cadastro</th>
                            <th width="10%">Status</th>
                            <th width="5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                        {
                            foreach (var Item in Model.ListEntity)
                            {
                                if (Item.CaminhoArquivo != null && Item.NomeArquivo != null)
                                {
                                    caminhoImagem = Item.CaminhoArquivo + Item.NomeArquivo;
                                }
                                else
                                {
                                    caminhoImagem = "/img/fotoCadastro/foto-cadastro.jpeg";
                                }
                                <tr>
                                    <td class="text-center"> @Html.Raw(!string.IsNullOrEmpty(caminhoImagem) ? "<img src='"+ caminhoImagem + "'  style=\"width: 161.5px!important; height: 165px!important;\" > " : "Não" )</td>
                                    <td class="text-center" title="@Item.Descricao">@Html.Raw(string.IsNullOrEmpty(Item.Descricao) ? "<span class=\"badge badge-pill badge-warning\" title=\"NÃO INFORMADA\">NÃO INFORMADA</span>" : (Item.Descricao.Length > 20 ? Item.Descricao.Substring(0, 16).ToUpper() + "..." : Item.Descricao))</td>
                                    <td>@(Item.NomeArquivo)</td>
                                    <td>@Item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td class="text-center">@Html.Raw(Item.Ativo == true ? "<span title=\"ATIVADO\" class=\"badge badge-pill badge-success\">ATIVADO</span>" : "<span title=\"DESATIVADO\" class=\"badge badge-pill badge-warning\">DESATIVADO</span>")</td>
                                    <td class="text-center">
                                        <a asp-page="/NovaCampanhaArquivo" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanhaArquivo.ToString()))" title="Editar" class="text-info"><i class="icon fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
