@page
@model CRMYIA.Web.Pages.KPIGrupoModel
@{
    ViewData["Title"] = "";
    ViewData["Pagina"] = "KPIGrupo";
}
@using CRMYIA.Business.Util;
@using CRMYIA.Business;
@using System.Security.Claims;


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="task-board">

                    <div class="status-card" style="background-color: yellow">
                        <div class="card-header">
                            <span class="card-header-text text-center">
                                <label>Perfis</label>
                                <select class="form-control select2" style="width: 100%;" onchange="this.form.submit()"
                                        asp-for="@Model.IdPerfil" id="IdPerfil" name="IdPerfil">
                                    <option>Selecione um perfil</option>
                                    <option selected="selected" value="1">Gerente</option>
                                    <option value="2">Supervisor</option>
                                    <option value="3">Corretor</option>
                                </select>
                            </span>
                            </br>
                        </div>
                        <ul class="sortable ui-sortable" id="Pefis" data-status-id="Pefis">
                            @if ((Model.ListCargo != null) && (Model.ListCargo.Count > 0))
                            {
                                foreach (var Item in Model.ListCargo)
                                {
                                    <li class="text-row ui-sortable-handle" data-task-id="@Item.IdUsuario" id="@("id-" + @Item.IdUsuario)">
                                        <p><img width="50" src="@Item.CaminhoFoto@Item.NomeFoto" alt="@Item.NomeFoto.ToString()" /></p>
                                        <p><strong>Nome:</strong> <span id="">@(Item.Nome)</span></p>
                                        <p><strong>Cargo:</strong></p>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="text-row-empty div-blocked" data-task-id="0">Nenhum </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>