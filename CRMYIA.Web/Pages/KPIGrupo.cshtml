@page
@model CRMYIA.Web.Pages.KPIGrupoModel
@{
    ViewData["Title"] = "";
    ViewData["Pagina"] = "KPIGrupo";
}
@using CRMYIA.Business.Util;
@using CRMYIA.Business;
@using System.Security.Claims;


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="task-board">

                    <div class="status-card " style="background-color: yellow">
                        <div class="card-header">

                            
                                <span class="card-header-text text-center">
                                    <label>Perfis</label>
                                    <select class="form-control select2" style="width: 100%;" onchange="this.form.submit()"
                                            asp-for="@Model.IdPerfil" id="IdPerfil" name="IdPerfil">
                                        <option>Selecione um perfil</option>
                                        <option selected="selected" value="1">Gerente</option>
                                        <option value="2">Supervisor</option>
                                        <option value="3">Corretor</option>
                                    </select>
                                </span>
                            
                            <div class="row m-2 text-center">
                                <label>Novo grupo</label>
                                <i class="fas fa-plus fa-stack-1x" data-toggle="modal" data-target="#modal-Grupo"></i>
                            </div>

                        </div>
                        <ul class="sortable ui-sortable" id="Pefis" data-status-id="Pefis">
                            @if ((Model.ListCargo != null) && (Model.ListCargo.Count > 0))
                            {
                                foreach (var Item in Model.ListCargo)
                                {
                                    <li class="text-row ui-sortable-handle" data-task-id="@Item.IdUsuario" id="@("id-" + @Item.IdUsuario)">
                                        <p><img width="50" src="@Item.CaminhoFoto@Item.NomeFoto" alt="@Item.NomeFoto.ToString()" /></p>
                                        <p><strong>Nome: </strong> <span id="">@(Item.Nome)</span></p>
                                        <p><strong>Cargo: @Item.DescricaoPerfil</strong></p>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="text-row-empty div-blocked" data-task-id="0">Nenhum </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- /.modal Cadastro Grupo -->
<div class="modal fade" id="modal-Grupo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Novo Grupo KPI</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="GrupoMensagemDiv" style="display: none;">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div class="alert alert-success alert-dismissible" id="GrupoMensagemDivAlert">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
                                <i id="GrupoMensagemIcon" class="icon fas fa-check"></i>
                                <span id="GrupoMensagemSpan">Dados salvos com sucesso!</span>
                            </div>
                        </div>
                    </div>
                </div>
                <form method="post" asp-page="/KPIGrupo" asp-page-handler="KPIGrupo" id="formKPIGrupo">
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <label>Nome</label>
                                <input type="text" class="form-control" placeholder="Nome" asp-for="@Model.KPIGrupoEntity.Nome">
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label>Status *</label>
                            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.KPIGrupoEntity.Ativo">
                                <label class="custom-control-label" for="customSwitch3">Ativo</label>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button id="ButtonSalvarKPIGrupo" type="button" class="btn btn-primary">Salvar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>