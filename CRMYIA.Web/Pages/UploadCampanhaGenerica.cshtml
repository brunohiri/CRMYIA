                                <label>Feriado / Data Comemorativa</label>
                                <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdCalendario" name="IdCalendario" id="IdCalendario">
                                    <option selected="selected">Selecione...</option>
                                    @foreach (var Item in Model.ListCalendario)
                                    {
