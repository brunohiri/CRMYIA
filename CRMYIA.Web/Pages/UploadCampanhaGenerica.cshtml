                </div>
            </form>
            <div  id="tableCamapanhaGenerica">
                <div class="card-body table-responsive">
                    <table id="tableListagem" class="table table-striped table-hover dt-responsive display nowrap datatable" style="width:100%">
                  
                        <thead>
                            <tr>
                                <th></th>
                                <th>Imagem</th>
                                <th>Campanha</th>
                                <th>Cadastro</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                            {
                                foreach (var Item in Model.ListEntity)
                                {
                                    if (Item.CaminhoArquivo != null && Item.NomeArquivo != null)
                                    {
                                        caminhoImagem = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        caminhoImagem = "/img/fotoCadastro/foto-cadastro.jpeg";
                                    }
                                    <tr>
                                        <td class="text-center"></td>
                                        <td class="text-center"> @Html.Raw(!string.IsNullOrEmpty(caminhoImagem) ? "<img src='" + caminhoImagem + "'  style=\"width: 50px!important;\" > " : "Não")</td>
                                        <td class="text-center">@Item.IdCampanhaNavigation.Descricao</td>
                                        <td class="text-center">@Item.DataCadastro</td>
                                        <td class="text-center">@Html.Raw(Item.Ativo == true ? "<span title=\"ATIVADO\" class=\"badge badge-pill badge-success\">ATIVADO</span>" : "<span title=\"DESATIVADO\" class=\"badge badge-pill badge-warning\">DESATIVADO</span>")</td>
                                        <td class="text-center">
                                            <span class="btn alterar-titulo" title="Editar Texto" data-idcampanhaarquivo="@Item.IdCampanhaArquivo"><i class="icon fas fa-edit"></i></span>
                                            <span class="btn alterar-imagem" title="Editar Imagem" data-idcampanhaarquivo="@Item.IdCampanhaArquivo" data-nomearquivo="@Item.NomeArquivo" data-caminhoimagem="@caminhoImagem"><i class="fas fa-images"></i></span>
                                            <span class="btn excluir-imagem" title="Excluir Imagem" data-idcampanhaarquivo="@Item.IdCampanhaArquivo" data-nomearquivo="@Item.NomeArquivo"><i class="fas fa-trash-alt"></i></span>
                                        </td>
                                    </tr>
                                }
                            }
