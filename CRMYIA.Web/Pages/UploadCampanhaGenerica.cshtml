                                                        <td>@(ItemVetNomeImagem)</td>
                                                        <td>@Item.DataCadastro</td>
                                                        <td class="text-center">@Html.Raw(Item.Ativo == true ? "<span title=\"ATIVADO\" class=\"badge badge-pill badge-success\">ATIVADO</span>" : "<span title=\"DESATIVADO\" class=\"badge badge-pill badge-warning\">DESATIVADO</span>")</td>
                                                        <td class="text-center">
                                                            <a asp-page="/UploadCampanhaGenerica" asp-route-id="@Item.IdCampanhaArquivo" title="Editar" class="text-info"><i class="icon fas fa-edit"></i></a>
                                                            <span class="btn alterar-imagem" title="Editar Imagem" data-idcampanhaarquivo="@Item.IdCampanhaArquivo" data-nomearquivo="@ItemVetNomeImagem" data-caminhoimagem="@caminhoImagem"><i class="fas fa-images"></i></span>
