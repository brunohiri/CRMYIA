                            <div class="form-group">
                                <label>Título</label>
                                <input type="text" placeholder="Título" class="form-control" name="Titulo" id="Titulo">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Campanha</label>
                                <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdCampanha" name="IdCampanha" id="IdCampanha">
                                    <option selected="selected">Selecione...</option>
                                    @foreach (var Item in Model.ListCampanha)
                                    {
                                        <option value="@Item.IdCampanha">@(Item.Descricao)</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label>Existe Data Sazonal</label>
                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                    <input type="checkbox" class="custom-control-input" name="ExisteDataSazonal" id="ExisteDataSazonal">
