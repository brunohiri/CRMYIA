                                                <span class="btn excluir-imagem" title="Excluir Imagem" data-idcampanhaarquivo="@Item.IdCampanhaArquivo"><i class="fas fa-trash-alt"></i></span>
                                            </td>
                                        </tr>*@
                                    }
                                    else if (vetNomeImagem.Length > 1)
                                    {
                                        foreach (var ItemVetNomeImagem in vetNomeImagem)
