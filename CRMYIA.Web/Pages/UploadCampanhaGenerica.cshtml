                                            string ItemComTralha = "";
                                            if (ItemVetNomeImagem == "")
                                            {
                                                ItemComTralha = "#";
                                            }
                                            else
                                            {
                                                ItemComTralha = ItemVetNomeImagem.Substring(0, 1);
                                            }

                                            if (!(ItemComTralha == "#"))
                                            {
                                                if (Item.CaminhoArquivo != null && ItemVetNomeImagem != null)
                                                {
                                                    caminhoImagem = Item.CaminhoArquivo + ItemVetNomeImagem;
                                                }
                                                else
                                                {
                                                    caminhoImagem = "/img/fotoCadastro/foto-cadastro.jpeg";
                                                }
