@page
@model CRMYIA.Web.Pages.NovoModuloModel
@{
    ViewData["Title"] = "Novo";
    ViewData["Pagina"] = "Módulo";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @if ((Model != null) && (Model.Mensagem != null))
                        {
                            <div class="@Model.Mensagem.CssClass alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="@Model.Mensagem.IconClass"></i>
                                @Model.Mensagem.Mensagem
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdModulo">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Módulo Referência</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdModuloReferencia" id="IdModuloReferencia">
                            <option selected="selected" value="0">Selecione...</option>
                            @foreach (var Item in Model.ListModuloReferencia)
                            {
                                <option value="@Item.IdModulo">@(Item.Descricao)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Descrição</label>
                        <input type="text" class="form-control" placeholder="Descrição" required asp-for="@Model.Entity.Descricao">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Url</label>
                        <input type="text" class="form-control" placeholder="Url" required asp-for="@Model.Entity.Url">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Estilo</label>
                        <input type="text" class="form-control" placeholder="Estilo" required asp-for="@Model.Entity.CssClass">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>ToolTip</label>
                        <input type="text" class="form-control" placeholder="ToolTip" required asp-for="@Model.Entity.ToolTip">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Ordem</label>
                        <input type="text" class="form-control" placeholder="Ordem" required asp-for="@Model.Entity.Ordem">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Data de Cadastro</label>
                        <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label>Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="switchAtivo" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="switchAtivo">Ativo</label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="reset" class="btn btn-default" onclick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>
</div>
