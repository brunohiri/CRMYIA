@page
@model CRMYIA.Web.Pages.NovoCorretorModel
@{
    ViewData["Title"] = "Novo";
    ViewData["Pagina"] = "Corretor";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
    </div>
    <!-- /.card-header -->
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @if ((Model != null) && (Model.Mensagem != null))
                        {
            <div class="@Model.Mensagem.CssClass alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <i class="@Model.Mensagem.IconClass"></i>
                @Model.Mensagem.Mensagem
            </div>}
                    </div>
                </div>
            </div>
            <div class="row">
                <input type="hidden" class="form-control" asp-for="@Model.Entity.IdUsuario">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>CPF/CNPJ</label>
                        <input type="text" class="form-control cpf-cnpj" placeholder="CPF/CNPJ" required asp-for="@Model.Entity.Documento">
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control" placeholder="Nome" required asp-for="@Model.Entity.Nome">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Código</label>
                        <input type="text" class="form-control" placeholder="Código" required asp-for="@Model.Entity.Codigo">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Conta</label>
                        <input type="text" class="form-control" placeholder="Nº da conta" required asp-for="@Model.Entity.Conta">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Tipo da conta</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.TipoConta">
                            <option selected="selected">Selecione...</option>
                            <option value="Corrente">Corrente</option>
                            <option value="Poupança">Poupança</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Agência</label>
                        <input type="text" class="form-control" placeholder="Agência" required asp-for="@Model.Entity.Agencia">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Banco</label>
                        <input type="text" class="form-control" placeholder="Banco" required asp-for="@Model.Entity.Banco">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Corretora</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdCorretora">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListCorretora)
                            {
                <option value="@Item.IdCorretora">@(Item.RazaoSocial.Length > 40 ? Item.RazaoSocial.Substring(0,40) + "..." : Item.RazaoSocial)</option>}
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Classificação</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdClassificacao">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListClassificacao)
                            {
                <option value="@Item.IdClassificacao">@(Item.Descricao)</option>}
                        </select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Produção</label>
                        <select class="form-control select2" style="width: 100%;" asp-for="@Model.Entity.IdProducao">
                            <option selected="selected">Selecione...</option>
                            @foreach (var Item in Model.ListProducao)
                            {
                <option value="@Item.IdProducao">@(Item.Descricao)</option>}
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Data Nasc./Abertura</label>
                        <input type="date" class="form-control" placeholder="Data de Nascimento ou Abertura" asp-for="@Model.Entity.DataNascimentoAbertura">
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label>Telefone</label>
                        <input type="text" class="form-control telefone" placeholder="Telefone" required asp-for="@Model.Entity.Telefone">
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="Email" required asp-for="@Model.Entity.Email">
                    </div>
                </div>
                @*<div class="col-sm-1">
                    <div class="form-group">
                        <label>Logar com </label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="customSwitch3">Email</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Login</label>
                        <input type="email" class="form-control" placeholder="Login" required asp-for="@Model.Entity.Login">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Senha</label>
                        <input type="password" class="form-control" placeholder="Senha" required asp-for="@Model.Entity.Senha">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Confirmar Senha</label>
                        <input type="password" class="form-control" placeholder="Confirmar Senha" required asp-for="@Model.ConfirmarSenha">
                    </div>
                </div>*@

                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Data de Cadastro</label>
                        <input type="text" class="form-control" placeholder="@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")" asp-for="@Model.Entity.DataCadastro" readonly>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label>Status</label>
                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                            <input type="checkbox" class="custom-control-input" id="customSwitch3" checked asp-for="@Model.Entity.Ativo">
                            <label class="custom-control-label" for="customSwitch3">Ativo</label>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Salvar</button>
            <button type="reset" class="btn btn-default" onclick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>
</div>
