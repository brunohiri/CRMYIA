@page
@model CRMYIA.Web.Pages.ListarModuloModel
@{
    ViewData["Title"] = "Listar";
    ViewData["Pagina"] = "Módulo";
}
@using CRMYIA.Business.Util;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="tableListagem" class="table table-striped table-hover dt-responsive display nowrap datatable" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Ordem</th>
                            <th>Módulo</th>
                            <th>Mód.Referência</th>
                            <th>Url</th>
                            <th>Estilo</th>
                            <th>ToolTip</th>
                            <th>Cadastro</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListEntity != null && Model.ListEntity.Count() > 0)
                        {
                            foreach (var Item in Model.ListEntity)
                            {
                                <tr>
                                    <td></td>
                                    <td>@Item.Ordem</td>
                                    <td>@Item.Descricao</td>
                                    <td>@(Item.IdModuloReferenciaNavigation == null ? "" : Item.IdModuloReferenciaNavigation.Descricao)</td>
                                    <td>@Item.Url</td>
                                    <td>@Item.CssClass</td>
                                    <td>@Item.ToolTip</td>
                                    <td>@Item.DataCadastro.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>@Html.Raw(Item.Ativo == true ? "<span class=\"badge badge-pill badge-success\">ATIVADO</span>" : "<span class=\"badge badge-pill badge-warning\">DESATIVADO</span>")</td>
                                    <td>
                                        <a asp-page="/NovoModulo" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdModulo.ToString()))" title="Editar" class="text-info"><i class="icon fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
