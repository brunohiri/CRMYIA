@page
@model IndexMarketingModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["Pagina"] = "Marketing";
}
@using CRMYIA.Business.Util;
@{ string nomeCaminho = "img/fotoCadastro/imagem_vazia.png";}
@{ string url = "";}
@{ bool fim = false;}
@{ long? IdCampanha = 0;}

<!-- Info boxes -->
<div class="row">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-cog"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Propostas e <br /> Seguros Implantados</span>
                <span class="info-box-number" id="ValorPropostasImplantadas">
                    R$ 0,00
                </span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-thumbs-up"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Orçamentos <br />em Negociação</span>
                <span class="info-box-number" id="QtdOrcamentosEmNegociacao">0</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <!-- fix for small devices only -->
    <div class="clearfix hidden-md-up"></div>

    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-shopping-cart"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Nº de Corretores<br />Produzindo</span>
                <span class="info-box-number" id="QtdCorretoresProduzindo">0</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-users"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Nº de Corretores<br />Inativos</span>
                <span class="info-box-number" id="QtdCorretoresInativos">0</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->


<!-- Main row -->
<div class="row">
    <!-- Left col -->
    <div class="col-md-8">
        <div class="row">

            <div class="col-md-12">
                <!-- USERS LIST -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Campanhas e Marketing</h3>

                        <div class="card-tools">
                            @*<span class="badge badge-danger">8 novas campanhas</span>*@
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <ul class="users-list clearfix">

                            @foreach (var Item in Model.ListaCampanhaArquivo)
                            {

                                if (Item.CampanhaArquivo.Count > 0)
                                {
                                    url = "/Banners";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.Video.Count > 0)
                                {
                                    url = "/Videos";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.CapaRedeSocial.Count > 0)
                                {
                                    url = "/CapasRedeSocial";

                                    var RedeSocial = Item.CapaRedeSocial.ToList();

                                    int tam = RedeSocial.Count();
                                    int i = 0;

                                    foreach (var ItemRedeSocial in RedeSocial)
                                    {


                                        if (IdCampanha != ItemRedeSocial.IdCampanha)
                                        {
                                            IdCampanha = ItemRedeSocial.IdCampanha;
                                            if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                            {
                                                nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                            }
                                            else
                                            {
                                                nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                            }

                                            <li class="banners" style="width:6.5rem !important;">
                                                <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                                    <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                                </a>
                                                <span class="users-list-date">@Item.Descricao</span>
                                            </li>
                                        }

                                    }
                                }
                                else if (Item.AssinaturaCartao.Count > 0)
                                {
                                    url = "/AssinaturaCartao";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                                else if (Item.Banner.Count > 0)
                                {
                                    url = "/OperadoraSeguradora";

                                    if (@Item.CaminhoArquivo != null && @Item.NomeArquivo != null)
                                    {
                                        nomeCaminho = Item.CaminhoArquivo + Item.NomeArquivo;
                                    }
                                    else
                                    {
                                        nomeCaminho = "img/fotoCadastro/imagem_vazia.png";
                                    }

                                    <li class="banners" style="width:6.5rem !important;">
                                        <a asp-page="@url" asp-route-id="@System.Web.HttpUtility.UrlEncode(Criptography.Encrypt(Item.IdCampanha.ToString()))">
                                            <img src="../@nomeCaminho" alt="Logo - @Item.Descricao" style="border-radius:0 !important;">

                                        </a>
                                        <span class="users-list-date">@Item.Descricao</span>
                                    </li>
                                }
                            }

                            

                        </ul>
                        <!-- /.users-list -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer text-center">
                        <a href="/MaterialDivulgacao">Ver todas as Campanhas</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!--/.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.col -->

    <div class="col-md-4">
        
        <div class="info-box mb-3 bg-info">
            <span class="info-box-icon"><i class="far fa-comment"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Corretores Aniversariantes do mês</span>
                <span class="info-box-number" id="CorretoresAniversariantesMes">0</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->

        
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->