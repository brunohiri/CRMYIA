@page
@model CRMYIA.Web.Pages.ListarKPIMetasModel
@{
    ViewData["Title"] = "Listar";
    ViewData["Pagina"] = "KPICargo";
}
@using CRMYIA.Business.Util;

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"] @ViewData["Pagina"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">


                <ul class="nav nav-tabs" role="tablist">
                    <li class="active">
                        <a href="#tab-table1" data-toggle="tab">Metas de valores</a>
                    </li>
                    <li>
                        <a href="#tab-table2" data-toggle="tab">Metas de vidas</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab-table1">
                        <table id="myTable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                @if (Model.ListEntityValor != null && Model.ListEntityValor.Count() > 0)
                                {
                                    <tr>
                                        @foreach (var Item in Model.ListEntityValor)
                                        {
                                            <th>Item.</th>
                                        }
                                    </tr>
                                }
                            </thead>
                        </table>
                    </div>
                    <div class="tab-pane" id="tab-table2">
                        <table id="myTable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Position</th>
                                    <th>Office</th>
                                    <th>Extn.</th>
                                    <th>Start date</th>
                                    <th>Salary</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>




